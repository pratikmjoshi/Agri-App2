<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_alert"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.prateekjoshi.agri_app.AlertActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@color/white">

        <ImageView
            android:layout_above="@+id/alert_nonew_textview"
            android:src="@drawable/nonewicon"
            android:maxWidth="100dp"
            android:maxHeight="100dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/alert_nonewicon"/>

        <TextView
            android:id="@+id/alert_nonew_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/ealert_nonew"
            android:textColor="#424242"
            android:textSize="30dp"/>


        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="50dp"
            android:id="@+id/alert_recycler_view"
            android:scrollbars="vertical"

            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/clear_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            app:backgroundTint="#FFEB3B"
            android:tint="@color/white"
            android:background="#FFEB3B"
            android:src="@drawable/ic_notif_clear" />

    </RelativeLayout>




</RelativeLayout>
