<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_single_crop_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/Turquoise"
    tools:context="com.example.prateekjoshi.agri_app.SingleCropProfileActivity">
    
    <include
        android:id="@+id/activity_single_crop_profile_toolbar"
        layout="@layout/profile_toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@color/white">
    
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/selector"
            android:src="@drawable/quinoagrain"
            android:id="@+id/scrop_croppic"
            android:adjustViewBounds="true"
            android:maxWidth="100dp"
            android:maxHeight="100dp"
            android:scaleType="fitCenter"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Default"
            android:layout_below="@id/scrop_croppic"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textSize="25dp"
            android:id="@+id/scrop_croppic_textview"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ecropitem_trees"
            android:id="@+id/scrop_crop_per_hectare_textview"
            android:layout_below="@id/scrop_croppic"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="15dp"
            android:textSize="18dp"/>
        <android.support.design.widget.TextInputEditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/scrop_crop_per_hectare_textview"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="@string/eprofile_hectares"
            android:maxLines="1"
            android:inputType="number"
            android:id="@+id/scrop_crop_per_hectare_edittext"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ecropitem_quintals"
            android:layout_below="@id/scrop_crop_per_hectare_edittext"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/scrop_crop_quintal_textview"
            android:textSize="18dp"/>
        <android.support.design.widget.TextInputEditText
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:hint="@string/ereg6_quintals"
            android:layout_below="@id/scrop_crop_quintal_textview"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:inputType="number"
            android:maxLines="1"
            android:id="@+id/scrop_crop_quintal_edittext"/>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
