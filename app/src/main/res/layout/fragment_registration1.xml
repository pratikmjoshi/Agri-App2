<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_registration1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cityscape"
    tools:context="com.example.prateekjoshi.agri_app.Registration1">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_reg" />

    <TextView
        android:id="@+id/reg1_createaccount_textview"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:text="Create Account"
        android:textColor="@color/white"
        android:textSize="30sp" />



    <android.support.design.widget.TextInputLayout
        android:id="@+id/reg1_phone_textview"
        android:layout_width="match_parent"
        app:hintEnabled="false"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/reg1_phone_edittext"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:padding="12dp"
            android:layout_margin="8dp"

            android:layout_below="@+id/reg1_phone_textview"
            android:layout_marginLeft="10dp"
            android:background="@drawable/radio_background"
            android:hint="Phone Number"
            android:inputType="phone"
            android:textColor="@color/black"
             />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/reg1_password_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintEnabled="false"
        android:layout_below="@+id/reg1_phone_textview"
        android:weightSum="1">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/reg1_password_edittext"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/reg1_password_textview"
            android:layout_margin="8dp"
            android:background="@drawable/radio_background"
            android:hint="Create Password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColor="@color/black"
             />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/reg1_btn_next"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_below="@+id/reg1_password_textview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/button_background2"
        android:text="Register"
        android:textColor="@color/white" />


</RelativeLayout>
