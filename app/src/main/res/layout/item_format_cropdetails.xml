<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_format_cropdetails_title"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="18sp"
        android:background="@color/Turquoise"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/selector"
        android:src="@drawable/quinoagrain"
        android:id="@+id/profile_cropdetails_croppic"
        android:adjustViewBounds="true"
        android:maxWidth="100dp"
        android:maxHeight="100dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ecropitem_trees"
        android:id="@+id/profile_cropdetails_hectares_textview"
        android:layout_toRightOf="@+id/profile_cropdetails_croppic"
        android:layout_below="@+id/item_format_cropdetails_title"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"/>

    <android.support.design.widget.TextInputEditText
        android:id="@+id/profile_cropdetails_hectares_edittext"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_cropdetails_hectares_textview"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/profile_cropdetails_croppic"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ecropitem_quintals"
        android:id="@+id/profile_cropdetails_quintals_textview"
        android:layout_toRightOf="@+id/profile_cropdetails_croppic"
        android:layout_below="@+id/profile_cropdetails_hectares_edittext"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"/>

    <android.support.design.widget.TextInputEditText
        android:id="@+id/profile_cropdetails_quintals_edittext"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_cropdetails_quintals_textview"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/profile_cropdetails_croppic"/>

</RelativeLayout>